@using Sora.BankHubTest.Entities;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var totalPages = (int)ViewData["TotalPages"];
    var page = (int)ViewData["Page"];
    var orders = (List<Order>)ViewData["Orders"];
}

<div class="container">
    <h2 class="mb-3">Danh sách đơn hàng</h2>
    @if(orders != null && orders.Count > 0)
    {
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Thời gian cập nhật</th>
                    <th>Mã đơn hàng</th>
                    <th>Số tiền đơn hàng</th>
                    <th>Trạng thái đơn hàng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in orders)
                {
                    <tr>
                        <td>@order.UpdatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@order.OrderId</td>
                        <td>@order.OrderAmount</td>
                        <td>@order.OrderStatusText</td>
                    </tr>
                }
            </tbody>
        </table>
    } 
    else
    {
        <div>Chưa có đơn hàng nào cả.</div>
    }

    @if(totalPages > 1)
    {
        <nav class="mt-3 mb-3" aria-label="Phân trang">
            <ul class="pagination">
                @for (int i = 1; i < totalPages; i++)
                {
                    <li class="page-item active">
                        @if(i == page)
                        {
                            <span class="page-link" href="#">@i</span>
                        }
                        else
                        {
                            <a class="page-link" href="#">@i</a>
                        }
                    </li>
                }
            </ul>
        </nav>
    }
</div>